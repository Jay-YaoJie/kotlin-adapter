<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    android:background="@color/comm_white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1.0"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_hot_campaign" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1.0"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_super_cashback" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1.0"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_hot_sales" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1.0"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_discount_area" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1.0"
            android:scaleType="centerCrop"
            android:src="@mipmap/promotion_bargain_price" />
    </LinearLayout>
</LinearLayout>